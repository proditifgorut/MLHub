<template>
  <div class="space-y-8">
    <div class="bg-slate-850 border border-slate-800 rounded-xl shadow-lg p-8">
      <h2 class="text-2xl font-semibold text-white mb-6 flex items-center">
        <TrendingUp class="h-6 w-6 mr-2 text-blue-500" />
        Rekomendasi Produk
      </h2>

      <div class="grid md:grid-cols-3 gap-6 mb-6">
        <div>
          <label class="block text-sm font-medium text-slate-400 mb-2">Rentang Harga</label>
          <select v-model="userPreferences.priceRange" class="w-full p-3 bg-slate-700 border border-slate-600 rounded-lg text-white">
            <option value="low">$0 - $100</option>
            <option value="medium">$100 - $300</option>
            <option value="high">$300+</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-400 mb-2">Kategori</label>
          <select v-model="userPreferences.category" class="w-full p-3 bg-slate-700 border border-slate-600 rounded-lg text-white">
            <option value="electronics">Elektronik</option>
            <option value="clothing">Pakaian</option>
            <option value="books">Buku</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-400 mb-2">Preferensi Merek</label>
          <select v-model="userPreferences.brand" class="w-full p-3 bg-slate-700 border border-slate-600 rounded-lg text-white">
            <option value="any">Merek Apa Saja</option>
            <option value="premium">Merek Premium</option>
            <option value="budget">Ramah di Kantong</option>
          </select>
        </div>
      </div>

      <button @click="handleGetRecommendations" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors flex items-center space-x-2">
        <TrendingUp class="h-5 w-5" />
        <span>Dapatkan Rekomendasi</span>
      </button>
    </div>

    <div class="bg-slate-850 border border-slate-800 rounded-xl shadow-lg p-8">
      <div class="flex items-center justify-between mb-6">
        <h3 class="text-xl font-semibold text-white">Direkomendasikan untuk Anda</h3>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <transition-group name="list">
          <div v-for="product in recommendations" :key="product.id" class="bg-slate-800 border border-slate-700 rounded-lg overflow-hidden hover:shadow-lg hover:border-blue-600/50 transition-all duration-300 group">
            <img :src="product.image" :alt="product.name" class="w-full h-48 object-cover" />
            <div class="p-4">
              <h4 class="font-semibold text-slate-200 mb-1 truncate">{{ product.name }}</h4>
              <p class="text-sm text-slate-400 mb-2">{{ product.category }}</p>
              
              <div class="flex items-center justify-between mb-2">
                <span class="text-lg font-bold text-blue-400">${{ product.price }}</span>
                <div class="flex items-center space-x-1">
                  <Star class="h-4 w-4 text-yellow-400 fill-current" />
                  <span class="text-sm text-slate-300">{{ product.rating }}</span>
                  <span class="text-xs text-slate-500">({{ product.reviews }})</span>
                </div>
              </div>

              <div class="flex items-center justify-between mb-3">
                <span class="text-xs text-green-300 bg-green-900/50 px-2 py-1 rounded border border-green-800">
                  {{ (product.confidence * 100).toFixed(0) }}% cocok
                </span>
              </div>

              <div class="flex space-x-2">
                <button class="flex-1 bg-blue-600 text-white py-2 px-3 rounded text-sm hover:bg-blue-700 transition-colors flex items-center justify-center space-x-1">
                  <ShoppingCart class="h-4 w-4" />
                  <span>+ Keranjang</span>
                </button>
                <button class="p-2 border border-slate-600 rounded hover:bg-slate-700 transition-colors">
                  <Heart class="h-4 w-4 text-slate-400" />
                </button>
              </div>
            </div>
          </div>
        </transition-group>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, reactive } from 'vue';
import { TrendingUp, Star, ShoppingCart, Heart } from 'lucide-vue-next';
import { faker } from '@faker-js/faker';

const userPreferences = reactive({ priceRange: 'medium', category: 'electronics', brand: 'any' });

const generateProducts = () => {
  return Array.from({ length: 4 }, () => ({
    id: faker.string.uuid(),
    name: faker.commerce.productName(),
    price: faker.commerce.price({ min: 20, max: 500, dec: 0 }),
    rating: faker.number.float({ min: 3.5, max: 5, fractionDigits: 1 }),
    reviews: faker.number.int({ min: 10, max: 1000 }),
    image: `https://picsum.photos/300/200?random=${faker.number.int({ min: 1, max: 1000 })}`,
    category: faker.helpers.arrayElement(['Elektronik', 'Pakaian', 'Buku', 'Rumah', 'Olahraga']),
    confidence: faker.number.float({ min: 0.7, max: 0.98, fractionDigits: 2 }),
  }));
};

const recommendations = ref(generateProducts());

const handleGetRecommendations = () => {
  recommendations.value = generateProducts();
};
</script>

<style scoped>
.list-enter-active,
.list-leave-active {
  transition: all 0.5s ease;
}
.list-enter-from,
.list-leave-to {
  opacity: 0;
  transform: translateY(30px);
}
</style>
