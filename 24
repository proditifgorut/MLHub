<template>
  <div class="min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Prediksi AI</h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Rasakan kekuatan machine learning dengan model prediksi canggih kami
        </p>
      </div>

      <div class="flex justify-center mb-8">
        <div class="flex space-x-1 bg-gray-100 p-1 rounded-lg">
          <button
            v-for="feature in features"
            :key="feature.id"
            @click="activeFeature = feature.id"
            :class="[
              'flex items-center space-x-2 px-6 py-3 rounded-md font-medium transition-colors',
              activeFeature === feature.id
                ? 'bg-white text-blue-600 shadow-sm'
                : 'text-gray-600 hover:text-gray-900'
            ]"
          >
            <component :is="feature.icon" class="h-5 w-5" />
            <span>{{ feature.title }}</span>
          </button>
        </div>
      </div>

      <transition name="fade-transform" mode="out-in">
        <component :is="activeComponent" class="mb-12" />
      </transition>

      <div class="bg-gradient-to-br from-blue-600 to-purple-600 rounded-2xl p-8 text-white">
        <h2 class="text-2xl font-bold text-center mb-8">Statistik Platform</h2>
        <div class="grid md:grid-cols-3 gap-8 text-center">
          <div>
            <Brain class="h-8 w-8 mx-auto mb-2" />
            <div class="text-3xl font-bold mb-1">500+</div>
            <div class="text-blue-100">Model Dilatih</div>
          </div>
          <div>
            <Users class="h-8 w-8 mx-auto mb-2" />
            <div class="text-3xl font-bold mb-1">10K+</div>
            <div class="text-blue-100">Pengguna Aktif</div>
          </div>
          <div>
            <Zap class="h-8 w-8 mx-auto mb-2" />
            <div class="text-3xl font-bold mb-1">1M+</div>
            <div class="text-blue-100">Prediksi Dibuat</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup lang="ts">
import { ref, computed, shallowRef } from 'vue';
import { Brain, Camera, TrendingUp, Users, Zap } from 'lucide-vue-next';
import ImagePrediction from '../components/ImagePrediction.vue';
import RecommendationSystem from '../components/RecommendationSystem.vue';

const activeFeature = ref('image');

const features = [
  {
    id: 'image',
    title: 'Pengenalan Gambar',
    icon: Camera,
    component: shallowRef(ImagePrediction),
  },
  {
    id: 'recommendation',
    title: 'Rekomendasi Produk',
    icon: TrendingUp,
    component: shallowRef(RecommendationSystem),
  },
];

const activeComponent = computed(() => {
  return features.find((f) => f.id === activeFeature.value)?.component;
});
</script>

<style scoped>
.fade-transform-enter-active,
.fade-transform-leave-active {
  transition: opacity 0.3s ease, transform 0.3s ease;
}
.fade-transform-enter-from {
  opacity: 0;
  transform: translateY(20px);
}
.fade-transform-leave-to {
  opacity: 0;
  transform: translateY(-20px);
}
</style>
